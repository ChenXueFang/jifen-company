/* pages/essay/essay.wxss */
@import "/wxParse/wxParse.wxss";

page {
  width: 100%;
  height:100%;
}
.box{
  min-height: 100%;
  border-top: 2rpx solid #e0e0e0;
}
.container{
  width: 90%;
  margin: 0 auto;
}
.essayBox{
  text-align: left;
  font-size: 50rpx;
  padding-bottom: 150rpx;
}
.essayZi{
  font-size: 200rpx;
}
.wxParse-inline {
  font-size: 32rpx;
}
.wxParse-img{
  height: 440rpx!important;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
/* 文章中的标题作者 */
.title{
  font-size: 48rpx;
  font-weight: bold;
	color: #000;
  margin-top: 60rpx;
  margin-bottom: 36rpx;
}
.author{
  font-size: 30rpx;
	color: #929292;
  margin: 25rpx 0 15rpx;
}