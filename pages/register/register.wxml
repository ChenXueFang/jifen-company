<!--pages/register.wxml-->
<view class="register">
  <image class='logo' src='../../images/logo.png'></image>
  <view class='content'>
    <form bindsubmit="bindMobile">
      <view class='infolist'>
        <input name="mobile" bindinput="inputPhoneNum" maxlength='11' cursor="15" type='number' placeholder='请输入注册手机号' placeholder-style="color:#dbdbdb" />
      </view>
      <view class='infolist'>
        <input name="code" maxlength='4' cursor="15" type='number' style='width:400rpx;' placeholder='请输入验证码' placeholder-style="color:#dbdbdb"/>
        <view class='time' wx:if="{{isget}}">{{codetype}}</view>
        <view class='getcode' wx:else bindtap="getCode">获取验证码</view>
      </view>
      <button form-type="submit">绑定</button>
    </form>
  </view>
</view>
