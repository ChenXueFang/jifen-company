/* pages/components/foodlist/foodlist.wxss */
.clearfloat::after{
  display: block;
  clear: both;
  content:"";
  visibility:hidden;
}
.clearfloat{zoom:1} 
.fl{float:left}
.fr{float:right}
.collectionList{
  width: 655rpx;
	height: 383rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
  margin: 30rpx auto;   
}
.collectionImg{
  width:100%;
  height: 266rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
}
.collectionImg image{
  width:100%;
  height: 100%;
}
.collectionIntro{
  width:100%;
  height:117rpx;
}
.IntroName{
  width:92%;
  height:66rpx;
  margin: 0 auto;
}
.IntroName .name{
  width:60%;
  height:66rpx;
  line-height:75rpx;
  color: #252525;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.IntroName .evaluate{
  width:40%;
  height:66rpx;
  line-height:75rpx;
  text-align: right;
}
.evaluate image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 15rpx;
}
.collectedNum{
  width:92%;
  height:50rpx;
  font-size: 24rpx;
  margin: 0 auto;
  color: #888888;
}
.gray{
  -webkit-filter: grayscale(100%); /* Webkit */  
  filter: gray; /* IE6-9 */    
  filter: grayscale(1); /* W3C */  
}