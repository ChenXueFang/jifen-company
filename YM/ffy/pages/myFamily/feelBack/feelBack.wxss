  /* overflow: auto; */
}

.container {
  width: 100%;
  display: block;
  padding: 0;
  
}

.diaMain {
  padding-bottom: 250rpx;
}

.inputDia {
  position: fixed;
  height: 120rpx;
  width: 100%;
  text-align: left;
  background-color: #FFF;
  bottom: 0rpx;
  box-shadow: 0rpx -10rpx 30rpx 0rpx 
		rgba(153, 153, 153, 0.2);
}

.dia {
  width: 539rpx;
  background-color: #ebebeb;
  height: 75rpx;
  line-height: 75rpx;
  padding-left: 30rpx;
  border-radius: 10rpx;
  display: inline-block;
  margin-top: 20rpx;
  position: absolute;
  left:27rpx;
  font-size: 26rpx;
}

.msg-item {
  padding: 30rpx 100rpx;
  clear: both;
  margin-top: 80rpx;
}

.msg-item .mui-item-clear {
  clear: both;
}

.msg-item .msg-user {
  width: 70rpx;
  height: 70rpx;
  display: inline-block;
  border-radius: 100%;
  vertical-align: top;
  text-align: center;
  float: left;
  /* padding: 8px; */
  color: #ddd;
}

.msg-item .msg-content {
  display: inline-block;
  border-radius: 10rpx;
  border: solid 2rpx #d3d3d3;
  background-color: #fff;
  color: #333;
  padding: 15rpx;
  vertical-align: top;
  font-size: 27rpx;
  position: relative;
  margin: 0px 16rpx;
  max-width: 85%;
  min-width: 70rpx;
  float: left;
  text-align: left;
  word-break: break-all;
}

.msg-content-image {
  max-width: 300rpx;
  vertical-align: middle;
}
.ms-headimg{
  position: absolute;
}

.msg-item .msg-content .msg-content-inner {
  overflow-x: hidden;
}

.msg-item .msg-content .msg-content-arrow {
  position: absolute;
  border: solid 2rpx #d3d3d3;
  border-right: none;
  border-top: none;
  background-color: #fff;
  width: 20rpx;
  height: 20rpx;
  left: -10rpx;
  top: 7rpx;
  -webkit-transform: rotateZ(45deg);
  transform: rotateZ(45deg);
}

.msg-item-self .msg-user, .msg-item-self .msg-content {
  float: right;
}

.msg-item-self .msg-content .msg-content-arrow {
  left: auto;
  right: -10rpx;
  -webkit-transform: rotateZ(225deg);
  transform: rotateZ(225deg);
}

.msg-item-self .msg-content, .msg-item-self .msg-content .msg-content-arrow {
  background-color: #cc8ad5;
  color: #333;
  border-color: #cc8ad5;
}

