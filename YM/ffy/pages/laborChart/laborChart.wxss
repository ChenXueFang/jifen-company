/* pages/laborChart/laborChart.wxss */

page {
  height: 100%;
  background: #f4f4f4;
  font-family: 微软雅黑;
}

.Box {
  min-height: 100%;
  width: 90%;
  margin: 0 auto;
}

.warmBox {
  display: flex;
  margin-top: 20rpx;
}

.warmCon {
  position: relative;
}

.dayNum {
  width: 256rpx;
  height: 133rpx;
  box-sizing: border-box;
  padding-top: 15rpx;
  text-align: center;
  position: absolute;
  top: 30rpx;
  left: 175rpx;
  font-size: 82rpx;
  font-weight: bold;
  /* color: #e8c897; */
  color: #b64c9b;
  text-shadow: 5rpx 11rpx 5rpx #e7e6e6;
}

.day {
  font-size: 30rpx;
  margin-left: -20rpx;
}

.warmImg {
  width: 268rpx;
  height: 190rpx;
  margin-left: 205rpx;
}

.consultImg {
  width: 70rpx;
  height: 57rpx;
  margin-left: 130rpx;
  margin-top: 10rpx;
}

.listBox {
  width: 100%;
  height: 235rpx;
  box-sizing: border-box;
  background: #fff;
  box-shadow: 0rpx 16rpx 49rpx 0rpx rgba(153, 153, 153, 0.16);
  border-radius: 10rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  position: relative;
}

.border {
  width: 1%;
  height: 60%;
  position: absolute;
  top: 50rpx;
  left: 0;
}

.titleBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 85rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #b64c9b;
  border-bottom: 1rpx solid #e4e4e4;
}

.bottom {
  height: 130rpx;
}

.cirImg {
  width: 30rpx;
  height: 30rpx;
}

.clockTimeImg {
  width: 26rpx;
  height: 27rpx;
  margin-right: 20rpx;
}

.impot {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-top: 20rpx;
}

.picker {
  margin-top: 20rpx;
}

.selecttip {
  color: #999;
}
.change {
  padding: 3rpx 18rpx;
  font-size: 26rpx;
  color: #b64c9b;
  background-color: #f8e3f4;
  border-radius: 18rpx;
  margin-left: 25rpx;
}
.changeTimeOver {
  color: #a0a0a0;
  background-color: #ebebeb;
}

.changed {
  padding: 3rpx 18rpx;
  font-size: 26rpx;
  color: #5bca94;
  background-color: #ddf2e8;
  border-radius: 18rpx;
  margin-left: 25rpx;
}

.lineBox {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.line {
  width: 100rpx;
  height: 3rpx;
  background-color: #bdbdbd;
}

.lineZi {
  font-size: 26rpx;
  font-weight: bold;
  color: #bdbdbd;
}

.clockImg {
  width: 48rpx;
  height: 70rpx;
  position: absolute;
  top: 77rpx;
  left: 395rpx;
}

/* 咨询专家模态框 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 620rpx;
  height: 476rpx;
  overflow: hidden;
  position: fixed;
  top: 28%;
  left: 9%;
  z-index: 9999;
  background: #fff;
  border-radius: 10rpx;
}

.modal-title {
  padding-top: 50rpx;
  text-align: center;
}

.modal-title>image {
  width: 122rpx;
  height: 96rpx;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  width: 509rpx;
  height: 78rpx;
  margin: 0 auto;
  font-size: 32rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  justify-content: space-around;
  height: 86rpx;
  font-size: 34rpx;
  line-height: 86rpx;
  margin-top: 35rpx;
}

.btn-cancel {
  width: 260rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  background-color: #c5c5c5;
  border-radius: 33rpx;
  font-size: 32rpx;
  color: #fff;
}

.btn-confirm {
  width: 260rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  background-color: #b64c9b;
  border-radius: 33rpx;
  font-size: 32rpx;
  color: #fff;
}
.chydpic1{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
}
.pic1Hide, .pic2Hide, .pic3Hide {
  display: none;
}