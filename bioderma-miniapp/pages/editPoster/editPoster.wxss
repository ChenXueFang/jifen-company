/* pages/editPoster/editPoster.wxss */
.box{
    color: #333;
    font-size: 30rpx;
    position: relative;
}
.bgImg {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: -1;
}
.con{
    padding: 29rpx 24rpx 20rpx;
}
.title{
    text-align: center;
}
.imgBox, .postImg, .formBox, .officialText, .previewBtn, .textarea-bg{
    width: 100%;
}
.imgBox{
    margin: 27rpx 0 36rpx;
    /* box-shadow: 0rpx 0rpx 5rpx 0rpx 
        rgba(0, 0, 0, 0.1); */
    border-radius: 20rpx;
    position: relative;
}
.postImg{
    border-radius: 20rpx;
}
.collect{
    width: 130rpx;
    height: 44rpx;
    font-size: 24rpx;
	color: #fefefe;
	background-color: #546787;
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    position: absolute;
    bottom: 27rpx;
    right: 20rpx;
}
.collectImg{
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}
.officialText{
	box-shadow: 0rpx 0rpx 5rpx 0rpx 
        rgba(0, 0, 0, 0.2);
    background-color: rgba(255,255,255, 0.1);
	border-radius: 20rpx;
    font-size: 26rpx;
	line-height: 39rpx;
    color: #546787;
    padding: 50rpx 30rpx;
    box-sizing: border-box;
    margin-top: 22rpx;
}
.formBox{
	background-color: #ffffff;
	box-shadow: 0rpx 0rpx 5rpx 0rpx 
		rgba(0, 0, 0, 0.1);
    border-radius: 10rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.formItem{
    position: relative;
}
.formTitle{
    line-height: 80rpx;
    display: flex;
    justify-content: space-between;
}
.border{
    border-bottom: 1rpx solid #ced1d6;
    position: relative;
}
.word{
    position: absolute;
    bottom: 17rpx;
    right: 0rpx;
    font-size: 24rpx;
    color: #999999;
}
.wordInp{
    top: 34%;
    right: 0rpx;
}
.titleInp{
    height: 80rpx;
    font-size: 28rpx;
}
.textarea-bg{
    height: 225rpx;
    font-size: 28rpx;
    padding-top: 27rpx;
    box-sizing: border-box;
}
.phcolor{
    color: #999;
}
.switch{
    position: absolute;
    top: 0;
    right: -5rpx;
}
.wx-switch-input{
    width:77rpx !important;
    height:40rpx !important;
    border: #4798b9 !important;
    background-color: #4798b9 
    !important;  /*开启状态的背景颜色*/
    }
    /*白色样式（false的样式）*/
    .wx-switch-input::before{
    width:77rpx !important;
    height: 40rpx !important;
    background-color: #b7b7b7 !important;  /*关闭状态的背景颜色*/
    }
    /*绿色样式（true的样式）*/
    .wx-switch-input::after{
    width: 39rpx !important;
    height: 39rpx !important;
    background-color: #fff !important; /*滑动圆的颜色*/
    }
.previewBtn{
    height: 80rpx;
    line-height: 80rpx;
	background-color: #546787;
    border-radius: 10rpx;
    font-size: 28rpx;
	color: #fefefe;
    margin: 40rpx 0 30rpx;
}
.updateBox{
    padding-bottom: 40rpx;
}
/* 上传二维码 */
.uploader{
    margin-top: 10rpx;
    height: 217rpx;
    overflow: hidden;
}
.updateImg{
    width: 200rpx;
    height: 200rpx;
}
.delete{
    position: absolute;
    right: -15rpx;
    top: -15rpx;
    width: 40rpx;
    height: 40rpx;
  }
  .uploader__file{
    position: relative;
    width: 200rpx;
    display: inline-block;
    margin-top: 17rpx;
  }
  .weui-uploader__img {
    display: block;
    width: 200rpx;
    height: 200rpx;
    
    }
    
/* 自定义 radio 样式 */
radio .wx-radio-input{
    border-radius: 50%; 
    width: 28rpx;
    height: 28rpx;
}
 
/* 选中后的样式 （可根据设计稿需求自己修改） */
radio .wx-radio-input.wx-radio-input-checked::before{
    border-radius: 50%;
    width: 44rpx; 
    height: 44rpx; 
    line-height: 44rpx;
    text-align: center;
    font-size: 26rpx; 
    color:#fff;
    background: #4798b9;
    border-color: #4798b9;
}












