/* pages/seriesList/seriesList.wxss */
page {
    height:100%;
}
.bg{
    min-height:100%;
    background-color: #f5f6fa;
    padding: 20rpx 25rpx 20rpx;
    overflow: auto;
	  color: #000;
}
.proList{
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin: 30rpx 0 38rpx;
}
.proOne{
    width: 340rpx;
    font-size: 22rpx;
    border-radius:20rpx;
    background-color: #fff;
    margin-bottom: 15rpx;
}
.proImg{
    width: 100%;
    border-radius: 20rpx 20rpx 0rpx 0rpx;
}
.proIntro{
    text-align: center;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    padding: 15rpx 20rpx;
}
.seriesTitle{
    display: flex;
    align-items: center;
    width: 340rpx;
    background: #f9fdfe;
    margin-bottom: 3.5%;
    border-radius: 20rpx;
    font-size: 22rpx;
    color: #63748f;
}
.titleBox{
    width: 160rpx;
    margin-left: 30rpx;
}
.typeName{
    font-size: 24rpx;
    margin-bottom: 10rpx;
}
.seriesImg{
    width: 180rpx;
    height: 140rpx;
}

/* 瀑布流 */
.free-WaterfallFlow{
    width:100%;
    column-count:2;
    /*column-count 属性规定元素应该被分隔的列数：*/
  }
  .columnCount2{
    width:100%;
    column-count: auto;
  }
  .free-WaterfallFlow .flex-wrap{
    display: inline-block;
    width: 340rpx;
    font-size: 22rpx;
    margin-bottom:3%;
    border: solid 1rpx #e4e8eb;
    text-align: center;
    border-radius: 20rpx;
    background-color: #fff;
  }
  .flex-con{
    width: 340rpx;
    position: relative;
  }
  .flex-wrap image{
    width: 100%;
    border-radius: 20rpx 20rpx 0rpx 0rpx;
  }
  .flex-wrap view:nth-child(2){
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    padding: 10rpx 20rpx 15rpx;
  }
.userBtn{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}













