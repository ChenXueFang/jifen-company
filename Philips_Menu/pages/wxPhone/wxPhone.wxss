button {
  width: 80%;
  background: #5B991E;
  color: #fff;
  font-size: 32rpx;
  margin-top: 120rpx
}
button.cancel {
  margin-top: 20rpx;
  background: #ededed;
  color: #aaa;
}
button::after {
  border: none;
}

.bg {
  position: absolute;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
}