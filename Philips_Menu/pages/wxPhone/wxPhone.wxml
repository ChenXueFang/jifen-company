  <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" wx:else>微信授权手机号</button>
  <button bindtap='goBack' class="cancel"> 取消 </button>
  <view class="mask" wx:if="{{hasLoading}}"></view>
</view>