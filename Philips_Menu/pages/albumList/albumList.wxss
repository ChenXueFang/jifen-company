/* pages/albumList/albumList.wxss */
.philipsLogo {
  width:153rpx;
  height:78rpx;
  margin-left: 0rpx;
}
.albumBox{
  width:100%;
  height: 100%;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
  padding: 0 30rpx;
}
.top{
  width: 100%;
}
.newAlbum{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:690rpx;
  height:90rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 10rpx 0rpx rgba(0,78,48,0.16);
  border-radius:12rpx;
  padding: 0 20rpx;
  margin: 30rpx 0;
}
.newAlbum text{
  vertical-align: super;
  font-size:28rpx;
  font-weight:500;
  color:rgba(0,0,0,1);
  line-height:40rpx;
  letter-spacing:1rpx;
  margin-left: 10rpx;
}
.add{
  width: 43rpx;
  height: 43rpx;
}
.right{
  width:13rpx;
  height:26rpx;
}
.albumList{
  width:690rpx;
  height:280rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 10rpx 0rpx rgba(0,78,48,0.16);
  border-radius:12rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}
.albumTitle{
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.albumTitle text{
  display: block;
}
.title1{
  font-size:28rpx;
font-weight:500;
color:rgba(0,0,0,1);
line-height:40rpx;
letter-spacing:1rpx;
}
.title2{
  font-size:22rpx;
font-weight:400;
color:rgba(153,153,153,1);
line-height:30rpx;
letter-spacing:1rpx;
}
.imgsBox {
  display: flex;
}
.imgsBox>view{
  /* box-shadow:0px 2rpx 10rpx 0rpx rgba(0,78,48,0.16); */
  margin-right: 20rpx;
  width:144rpx;
  height:144rpx;
}
.imgsBox image{
  width:144rpx;
  height:144rpx;
}
.albumImgBox{
  width: 144rpx;
  height: 144rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}
.imgsBox .noAlbumImg{
  width: 100rpx;
height: 83rpx;
}