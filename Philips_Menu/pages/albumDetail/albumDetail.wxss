/* pages/albumDetail/albumDetail.wxss */
.albumBox {
  width: 100%;
  height: 100%;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
  padding: 0 30rpx;
}

.top {
  width: 100%;
}

.infoBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  margin-top: 34rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.info1 {
  display: flex;
  align-items: center;
}

.info1Text {
  display: flex;
  flex-direction: column;
  margin-right: 30rpx;
}

.info1Text .text1 {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
  letter-spacing: 1rpx;
}

.info1Text .text2 {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 30rpx;
  letter-spacing: 1rpx;
}

.info1 .text3 {
  font-size: 20rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
  letter-spacing: 1rpx;
  margin-left: 5rpx;
  vertical-align: super;
  display: inline-block;
}

.info1 image {
  width: 30rpx;
  height: 30rpx;
}

.info2 {
  display: flex;
  margin-top: 10rpx;
}

.info2 image {
  width: 60rpx;
  height: 60rpx;
  box-shadow: 0px 0px 16px 0px rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  object-fit: cover;
}

.info2 text {
  font-size: 22rpx;
  line-height: 30rpx;
  letter-spacing: 1rpx;
}

.info2 .text1 {
  margin-left: 10rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 60rpx;
  white-space:nowrap;
}

.info2 .text2 {
  color: rgba(153, 153, 153, 1);
  display: inline-block;
  margin-top: 18rpx;
}

.manage {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.manage image {
  width: 36rpx;
  height: 32rpx;
}

.manage text {
  font-size: 20rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 28rpx;
  letter-spacing: 1rpx;
}

/* 瀑布流 */
.free-WaterfallFlow {
  width: 100%;
  column-count: 2;
  /*column-count 属性规定元素应该被分隔的列数：*/
  margin: 30rpx 0 18rpx;
}

.twoCol {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.free-WaterfallFlow .flex-wrap {
  display: inline-block;
  width: 340rpx;
  font-size: 22rpx;
  margin-bottom: 5%;
  text-align: left;
  border-radius: 12rpx;
  position: relative;
}

.bgImg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.flex-wrap image {
  width: 100%;
  border-radius: 12rpx 12rpx 0rpx 0rpx;
}

.flex-wrap .choose {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid rgba(91, 153, 30, 1);
  border-radius: 50%;
  z-index: 1;
}

.choose.active {
  background: rgba(91, 153, 30, 1);
}

