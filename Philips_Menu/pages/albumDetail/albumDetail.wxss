/* 瀑布流 end */
.loveBox {
  display: flex;
  align-items: center;
}

.loveNum {
  font-size: 20rpx;
  color: #999;
  margin-left: 11rpx;
}

.flex-wrap image.loveImg {
  width: 21rpx;
  height: 20rpx;
  border-radius: 0;
}

.flex-wrap image.hardImg {
  width: 30rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.hardText {
  font-size: 20rpx;
  color: #5b991e;
}

.introText {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.conBox {
  padding: 20rpx;
}

.listName {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 1rpx;
}

.hard {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}
.video{
  width: 100%;
  border-radius: 12rpx 12rpx 0 0 ;
}
/* 下方选中弹框 */
.bottomBox {
  position: fixed;
  /* bottom: 0;
  width: 690rpx;
  height: 98rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* background-color: #fff; */
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 0;
  background: rgba(255, 255, 255, 1);
  transition: 0.3s;
  padding: 0rpx 30rpx;
  visibility: hidden;
  opacity: 0;
}
.bottomBox.isEdit{
  visibility: visible;
  opacity: 1;
  height: 98rpx;
  transition: 0.3s;
}
.bottomBox .left,
.bottomBox .left text {
  font-size: 26rpx;
  color: rgba(51, 51, 51, 1);
  /* line-height:37rpx; */
  letter-spacing: 1rpx;
}

.bottomBox .right,
.bottomBox .right text {
  font-size: 26rpx;

  /* line-height:37rpx; */
  letter-spacing: 1rpx;
}

.bottomBox .right text {
  height: 50rpx;
  border-radius: 4rpx;
  display: inline-block;
  line-height: 50rpx;
  padding: 0 20px;
}

.bottomBox .right .text1 {
  border: 1px solid rgba(91, 153, 30, 1);
  color: rgba(91, 153, 30, 1);
  margin-right: 20rpx;
}

.bottomBox .right .text2 {
  border: 1px solid rgba(235, 67, 67, 1);
  color: rgba(234, 67, 67, 1);
}

/* 下方选择专辑弹框 */
.mask{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,0.5);
  opacity: 0;
  display: none;
  transition: 1s;
  z-index: 2;
}
.mask.isMove{
  display: block;
  opacity: 1;
  transition: 1s;
}
.bottomBox2 {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 0;
  background: rgba(255, 255, 255, 1);
  transition: 0.3s;
  z-index: 2;

}
.bottomBox2.isMove{
  
  height: 570rpx;
  transition: 0.3s;
}
.bottomBox2 .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 82rpx;
  padding: 0rpx 30rpx;
  border-bottom: 1px solid rgba(216, 216, 216, 1);
}

.bottomBox2 .title .text1 {
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
}

.bottomBox2 .title .text2 {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 1);
  line-height: 33rpx;
  letter-spacing: 1rpx;
  vertical-align: super;
margin-left: 5rpx;
}

.bottomBox2 .title image {
  width: 32rpx;
  height: 32rpx;
}

.albumList {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 487rpx;
  overflow-y: scroll;
}

.albumList .album {
  width: 100%;
  min-height: 139rpx;
  padding: 0rpx 30rpx;
  border-bottom: 1px solid rgba(216, 216, 216, 1);
  display: flex;
  align-items: center;
}

.album .albumImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
}
.albumImgBox{
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}
.noAlbumImg{
  width:80rpx;
height: 66rpx;
}
.album text {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 1);
  letter-spacing: 1rpx;
}