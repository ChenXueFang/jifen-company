.product{
  width:100%;
  height: 100%;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
  padding: 20rpx 30rpx 10rpx;
  line-height:70rpx;
}
input{
  width:610rpx;
  height:70rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2px 13px 0px rgba(231,231,231,1);
  border-radius:6px;
  padding-left: 30rpx;
  line-height:70rpx;
  display: inline-block;
}
.searchBox text{
font-size: 30rpx;
font-weight: 400;
color: rgba(91,153,30,1);
letter-spacing: 2rpx;
text-shadow: 0px 2rpx 13rpx rgba(231,231,231,1);
display: inline-block;
vertical-align: top;
margin-left: 16rpx;
}
.historyTitle{
  display: flex;
flex-direction: row;
justify-content: space-between;
align-items: center;
  margin-bottom: 10rpx;
  margin-top: 30rpx;
}
.historyTitle image{
  width:24rpx;
height:24rpx;
}
.catagoryTitle{
  font-size:26rpx;
font-weight:400;
color:rgba(0,78,48,1);
line-height:37rpx;
letter-spacing:1rpx;
}
.history{
  display: inline-block;
  height:60rpx;
  background:rgba(236,243,228,1);
  border-radius:4rpx;
  padding: 0 35rpx;
  margin: 0rpx 20rpx 20rpx 0;
  line-height:60rpx;
}
.history text{
  font-size:26rpx;
font-weight:400;
color:rgba(91,153,30,1);
letter-spacing:1rpx;
}
.catagorys{
  border-bottom: 1rpx solid #DEDEDE;
}
.catagorysNameBox{
display: flex;
flex-direction: row;
justify-content: space-between;
align-items: center;
height: 88rpx;
}
.catagorysName{
font-size:34rpx;
font-weight:400;
color:rgba(51,51,51,1);
line-height:48rpx;
letter-spacing:2rpx;

}
.catagorys image{
  width:26rpx;
  height:13rpx;
  transform:rotate(0deg);
transition: 0.3s;
  /* transform:rotate(-90deg); */
}
 image.expand{
transform:rotate(-180deg);
transition: 0.3s;
}
.catagory{
  background:#fff;
  border:2rpx solid rgba(91,153,30,1);
}
.catagory.active{
  background:rgba(91,153,30,1);
}
.catagory.active text{
  color: #F9F9F9;
}
.catagorysTitle{
  margin-bottom: -10rpx;
}