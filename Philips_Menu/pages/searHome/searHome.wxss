/* 瀑布流 */
.free-WaterfallFlow {
    width: 100%;
    column-count: 2;
    /*column-count 属性规定元素应该被分隔的列数：*/
    margin: 30rpx 0 18rpx;
}

.twoCol {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.free-WaterfallFlow .flex-wrap {
    display: inline-block;
    width: 340rpx;
    font-size: 22rpx;
    margin-bottom: 5%;
    text-align: left;
    border-radius: 12rpx;
    position: relative;
}

.bgImg {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}

.flex-wrap image {
    width: 100%;
    border-radius: 12rpx 12rpx 0rpx 0rpx;
}

.flex-wrap .image2 {
    width: 100%;
    border-radius: 12rpx;
}

