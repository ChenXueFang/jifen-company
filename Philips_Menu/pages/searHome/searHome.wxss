/* tab切换 */
.swiper-tab {
    width: 100%;
    white-space: nowrap;
    /* tab滚动需要 */
    text-align: center;
    display: flex;
    align-items: center;
    box-shadow: 0rpx 10rpx 10rpx -10rpx rgba(200, 200, 200, 0.5);
    padding-left: 30rpx;
    box-sizing: border-box;
}

.swiper-tab-item {
    font-size: 30rpx;
    font-weight: 500;
    color: #9e9e9e;
    padding: 0 10rpx 10rpx;
    margin-right: 21rpx;
}

.tab-title {
    display: inline-block;
    /* tab滚动需要 */
}

.tab-active {
    border-bottom: 3rpx solid #5b991e;
}

.tab-active-color {
