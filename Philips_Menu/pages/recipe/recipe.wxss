.recipe {
  width: 100%;
  height: 100%;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
}

.top {
  width: 100%;
  height: 200rpx;
}

.headerTitle {
  margin-top: 35rpx;
}

.headerTitle text {
  letter-spacing: 0;
  color: #6a6a6a;
  font-weight: 600;
}

.recipeContent {
  width: 100%;
  height: auto;
}

.menuWrap {
  width: 675rpx;
  height: auto;
  margin: 0 auto 45rpx;
}

.muneClasses {
  width: 675rpx;
  height: 55rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 55rpx;
  color: #6a6a6a;
  margin-top: 30rpx;
  font-weight: 600;
