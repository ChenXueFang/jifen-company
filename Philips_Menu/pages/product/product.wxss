.product{
  width:100%;
  height: 100%;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
}
.top{
  width: 100%;
  height: 200rpx;
}
.headerTitle {
  margin-top: 35rpx;
}
.headerTitle text{
  letter-spacing: 0;
  color: #6a6a6a;
  font-weight: 600;
}
.productContent{
  width:100%;
  height: auto;
}
.productWrap{
  width: 678rpx;
  height:auto;
  margin: 0 auto;
}
.productList{
  width: 33.33%;
	height: 210rpx;
	background-color: #ffffff;
  margin-top: 20rpx;
  text-align: center;
}

.productImg{
 width: 185rpx;
	height: 205rpx;
  margin: 0 auto;
}
.productImg image{
  width:100%;
  height:100%;
}
.productIntro{
  width: 100%;
	height: 80rpx;
  font-size: 26rpx;
	line-height: 80rpx;
	color: #252525;
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
