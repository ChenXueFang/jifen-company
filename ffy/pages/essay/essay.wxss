/**评论**/
.comment{
  background-color: #FFF;
}
.comdetail{
  width: 90%;
  margin: auto;
  padding: 20rpx;
}
.comm_tit{
  font-size: 32rpx;
  color: #333333;
}
.comm_cont{
  margin-top: 20rpx;
  display: flex;
}
.cont_left,.cont_right{
  display: inline-block;
}
.cont_left{
  width: 15%;
}
.headimg{
  width: 100rpx;
  height: 100rpx;
  display: block;
  background-color: #fbf6fa;
  border-radius: 50rpx;
}
.cont_right{
  margin-left: 5%;
  width: 80%;
  border-bottom: 1rpx solid #e4e4e4;
}
.cont_r_nickname{
  font-size: 26rpx;
  color: #999999;
}
.cont_r_cont{
  font-size: 26rpx;
      color: #333333;
}
.cont_r_time{
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #999999;
}
.dLikeInfo{
  right: 55rpx;
  display: inline;
  position: absolute;
}
.dLike{
  width: 25rpx;
  height: 25rpx;
  margin-right: 5rpx;
}
.btnBox view{
  flex-grow: 1;
  text-align: center
}
button::after{border:0}
button{
  background-color: #FFF !important;
  margin-top: 20rpx;
}
.sharepic{
  width: 32rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.input-section {
    position: absolute;
    display: flex;
    align-items: center;
    height: 110rpx;
    /* bottom: 0rpx;*/
    left: 0rpx;
    right: 0rpx; 
    z-index: 500;
    background: #fbf6fa;
}
 
.input_input {
    background: #fff;
    margin-top: 12rpx;
    z-index: 500;
    width: 580rpx;
    height: 110rpx;
    padding-left: 35rpx;
 
}
 
.send_btn {
    width: 110rpx;
    height: 66rpx;
    position: absolute;
    top: 24rpx;
    right: 30rpx;
    background: #b24e9d;
    z-index: 550;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
 
.send_btn_text {
    display: flex;
    font-size: 32rpx;
    font-family: 'PingFang';
    color: #fff;
    z-index: 560;
}

.disView{
  pointer-events: none;
}