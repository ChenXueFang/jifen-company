/* pages/essay/essay.wxss */
@import "/wxParse/wxParse.wxss";

.essay {height:100%;background: #fbf6fa; padding-bottom: 120rpx;}
.box{
  min-height: 100%;
}
.container{
  width: 90%;
  margin: 0 auto;
}
.essayBox{
  text-align: left;
  font-size: 50rpx;
  /* padding-bottom: 150rpx; */
}
.essayZi{
  font-size: 200rpx;
}
.wxParse-inline {
  font-size: 32rpx;
}
.wxParse-img{
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
/* 文章中的标题作者 */
.title{
  font-size: 38rpx;
  font-weight: bold;
	color: #333333;
}
.author{
  font-size: 30rpx;
	color: #929292;
  margin: 25rpx 0 15rpx;
}
/* 分享收藏按钮 */
.btnBox{
  display: flex;
  position: fixed;
  bottom: 0;
  background-color: #FFF;
  width: 100%;
  height: 140rpx;
  line-height: 140rpx;
}
.love{
  margin-left: 20%;
}
