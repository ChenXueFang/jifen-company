/* tab切换 */
.tab-box{
  width: 100%;
  text-align: center;
}
.tab-nav.on{
  background: #b64c9b;
}
.tab-nav{
  display: inline-block;
  width: 20%;
	height: 40rpx;
	background-color: #b6b6b6;
	border-radius: 30rpx 0rpx 0rpx 30rpx;
  font-family: PingFang-SC-Bold;
	font-size: 30rpx;
  font-weight: bold;
	color: #ffffff;
  padding: 10rpx 20rpx;
}
.tab-box .tab-nav:nth-child(2){
  border-radius: 0rpx 30rpx 30rpx 0rpx;
}
