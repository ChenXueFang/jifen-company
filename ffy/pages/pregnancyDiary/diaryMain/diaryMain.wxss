/*开关*/
.wx-switch-input{
    width:82rpx !important;
    height:36rpx !important;
    background: #d088d3 !important;
    border: #d088d3 !important; /* 2018-07-18 重置开关边框颜色 */
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
    width:82rpx !important;
    height: 36rpx !important;
}
