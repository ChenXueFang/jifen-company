/* pages/messageList/messageList.wxss */
page{
  height:100%;
  background-color: #F4F4F4;
}
#container{
  width: 100%;
  display: flex;
  flex-direction:column;
}
.messMain{
  width: 96%;
  margin: auto;
}
.messlist{
  background-color: #FFF;
  margin: 3%;
  border-radius: 15rpx;
  position: relative;
}
.messText{
  width: 70%;
  padding-left: 5%;
  padding-top: 5%;
}
.messDate{
  color: #999999;
  display: block;
  margin-top: 10rpx;
}
.messpic{
  width: 117rpx;
  height: 105rpx;
  position: absolute;
  top: 25rpx;
  right: 30rpx;
}
.redpoint{
  width: 12rpx;
  height: 12rpx;
  position: absolute;
  top: 50rpx;
  left: 22rpx;
}
.isshow{
  display: none;
}

.nomess{
  background-color: #FFF;
  margin: 3%;
  border-radius: 15rpx;
}
.nomesscon{
  text-align: center;
  display: block;
  height: 120rpx;
  line-height: 120rpx;
}